<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Dexma_cpt_ClientSide.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Dexma_cpt_ClientSide.Views"
        mc:Ignorable="d" MinWidth="600" MinHeight="750"
        Width="1285" Height="750"
		CanResize="False"
        Icon="\Assets\logoicon.png"
        x:Class="Dexma_cpt_ClientSide.Views.MainWindow"
        SystemDecorations="Full"
		
        WindowStartupLocation="CenterScreen"
        x:DataType="vm:MainWindowViewModel">

	<Window.Styles>
		<Style Selector="Window">
			<Setter Property="Background">
				<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
					<GradientStop Offset="0" Color="#02016E"/>
					<GradientStop Offset="0.1" Color="#02015E"/>
					<GradientStop Offset="0.2" Color="#020150"/>
					<GradientStop Offset="0.3" Color="#020131"/>
					<GradientStop Offset="0.5" Color="#02021E"/>
					<GradientStop Offset="0.7" Color="#020131"/>
					<GradientStop Offset="0.8" Color="#020150"/>
					<GradientStop Offset="0.9" Color="#02015E"/>
					<GradientStop Offset="1" Color="#02016E"/>
				</LinearGradientBrush>
			</Setter>
		</Style>
	</Window.Styles>


	
    <Grid>
        <ContentControl Content="{Binding CurrentPage}" Grid.Row="0"/>
    </Grid>
   

</Window>
